<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :date %><br/>
    <%= f.datetime_select :date %>
  </div>
  
  <br/>
  
  <div>
    <h3>Coach<h3>
  </div>
  
  <%= f.fields_for :coaches do |af| %>
    <div class="field">
			<%= af.label :name %>
			<%= af.text_field :name %>
		</div>
		
		<div class="field">
			<%= af.label :job %>
			<%= af.text_field :job %>
		</div>
		
		<div class="field">
			<%= af.check_box :_destroy %>
			<%= af.label :_destroy, "Remove" %>
		</div>
  	<p></p>
  <% end %>
  
  <div>
    <h3>Attendee<h3>
  </div>
  
  <%= f.fields_for :attendances do |af| %>
    <div class="field">
    	<%= af.select :user_type, ['ADMIN', 'STUDENT'] %>
    </div>
    
    <%= af.hidden_field :has_attended, value:false %>
    
    <div class="field">
    	<div class="field">
    			<%= af.label :name %>
    			<%= af.select :user_id, User.all.collect {|a| [ a.name + " " + a.email, a.id ]}, include_blank: true %>
    	</div>
    	
    	<div class="field">
    			<%= af.check_box :_destroy %>
    			<%= af.label :_destroy, "Remove" %>
    	</div>
  	</div>
  	<p></p>
  <% end %>


  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
